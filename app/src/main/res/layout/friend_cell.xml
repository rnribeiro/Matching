<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="130dp" android:id="@+id/relativeLayout" android:background="@drawable/layout_background"
>

    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/cell_friend_name"
            android:text="Friend Name"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.8"
            android:textAlignment="center"/>
    <ImageView
            android:id="@+id/cell_photo_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:srcCompat="@drawable/logo" android:background="@drawable/person_icon_background"
            android:scaleType="fitCenter"/>

</androidx.constraintlayout.widget.ConstraintLayout>