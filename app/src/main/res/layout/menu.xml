<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:context=".MatchActivity" android:backgroundTint="#FFFFFF" android:background="#FFFFFF"
        android:backgroundTintMode="src_over">

    <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/menuRelativeLayout" app:layout_constraintHorizontal_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

            <ImageView
                    android:src="@drawable/logo"
                    android:layout_width="182dp"
                    android:layout_height="50dp" android:id="@+id/logo_img_view"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.023"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginBottom="8dp"
                    app:layout_constraintHorizontal_bias="1.0"/>
            <ImageButton
                    android:src="@drawable/menu_icon"
                    android:layout_width="55dp"
                    android:layout_height="50dp" android:id="@+id/menu_icon_btn"
                    android:background="#00FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.13"
                    app:layout_constraintVertical_bias="0.023" android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="match_parent" android:id="@+id/menuCardView" android:visibility="gone">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent">

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="45dp" android:id="@+id/hide_menu_icon_btn"
                        android:background="#00FFFFFF"
                        tools:ignore="SpeakableTextPresentCheck"
                        app:layout_constraintBottom_toBottomOf="@+id/menu_logo_img_view"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/menu_logo_img_view"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0.025" app:layout_constraintHorizontal_bias="0.07"
                        android:foreground="@drawable/back_arrow"/>
                <ImageView
                        android:src="@drawable/logo"
                        android:layout_width="180dp"
                        android:layout_height="45dp" android:id="@+id/menu_logo_img_view"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0.01999998" app:layout_constraintHorizontal_bias="0.64"
                />


                <Button
                        android:id="@+id/button_rent"
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#37A82A"
                        android:text="Rent"
                        android:textStyle="normal"
                        app:iconTint="#673AB7"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.18" android:textSize="18sp" app:cornerRadius="20dp"/>
                <Button
                        android:id="@+id/button_join"
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#37A82A"
                        android:text="Join"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.28" android:textSize="18sp" app:cornerRadius="20dp"/>
                <Button
                        android:id="@+id/button_tournaments"
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#37A82A"
                        android:text="Tournaments"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.38" android:textSize="18sp" app:cornerRadius="20dp"/>
                <Button
                        android:id="@+id/button_Friends"
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#37A82A"
                        android:text="Friends"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.48" android:textSize="18sp" app:cornerRadius="20dp"/>

                <Button
                        android:id="@+id/button_account"
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#37A82A"
                        android:text="My Account"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.58" android:textSize="18sp" app:cornerRadius="20dp"/>

                <Button
                        android:id="@+id/button_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:backgroundTint="#37A82A"
                        android:text="Log out"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toLeftOf="@id/button_account"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0.96" app:layout_constraintHorizontal_bias="0"
                        android:textSize="18sp" app:cornerRadius="20dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/button_configuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FDFFFC"
                        android:clickable="true"
                        android:src="@drawable/ic_baseline_brightness_5_24"
                        android:tint="#37A82A"
                        app:backgroundTint="#FFFEFE"
                        app:borderWidth="1dp"
                        app:hoveredFocusedTranslationZ="10dp"
                        app:pressedTranslationZ="10dp"
                        app:rippleColor="#37A82A"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.96"
                        app:layout_constraintHorizontal_bias="0.85"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>