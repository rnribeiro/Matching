<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NoEvents">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="645dp"
                                                           app:layout_constraintTop_toTopOf="parent"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_alignParentBottom="true">

            <Button
                    android:text="Back"
                    android:layout_width="125dp"
                    android:layout_height="55dp"
                    android:id="@+id/back_no_events_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.945"
                    android:backgroundTint="#37A82A" android:textSize="16sp"/>

            <TextView
                    android:text="You have no events Try adding some"
                    android:layout_width="317dp"
                    android:layout_height="104dp"
                    android:id="@+id/textView6"
                    android:textSize="35sp"
                    android:gravity="center_horizontal|center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.553"
                    app:layout_constraintVertical_bias="0.20999998"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="88dp"
                    android:layout_height="71dp"
                    android:clickable="true"
                    android:id="@+id/add_events_float_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.881"
                    app:layout_constraintVertical_bias="0.79" android:foreground="@drawable/plus_sign"/>

            <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="525dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
            </ListView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include layout="@layout/menu"></include>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>