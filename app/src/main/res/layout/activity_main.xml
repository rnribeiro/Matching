<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:clickable="false" android:background="#FFFFFF">
    <ImageView
            android:layout_width="319dp"
            android:layout_height="82dp" app:srcCompat="@drawable/logo" android:id="@+id/logo_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.19"/>
    <Button
            android:text="Login"
            android:layout_width="190dp"
            android:layout_height="60dp" android:id="@+id/go_to_login_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            android:gravity="center|center_horizontal"
            app:layout_constraintVertical_bias="0.596"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"

            android:textSize="18sp" android:backgroundTint="#37A82A" app:layout_constraintTop_toTopOf="parent"
            android:onClick="onClick" app:cornerRadius="20dp"/>
    <Button
            android:text="Register"
            android:layout_width="190dp"
            android:layout_height="60dp" android:id="@+id/go_to_register_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            android:gravity="center|center_horizontal"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/go_to_login_btn" app:layout_constraintVertical_bias="0.085"
            android:backgroundTint="#37A82A" android:textSize="18sp" app:cornerRadius="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>